{
    "name": "settermjd/mezzio-twilio-webhook-validator",
    "description": "This package provides middleware for validating Twilio webhooks.",
    "license": "GPL-3.0-or-later",
    "type": "library",
    "minimum-stability": "stable",
    "require": {
        "php": "~8.4",
        "psr/http-server-middleware": "^1.0",
        "twilio/sdk": "^8.8",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.87",
        "laminas/laminas-coding-standard": "^3.1",
        "laminas/laminas-component-installer": "^3.5",
        "laminas/laminas-diactoros": "^3.6",
        "mikey179/vfsstream": "^1.6",
        "phpstan/phpdoc-parser": "^2.3",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpunit/phpunit": "^12.3"
    },
    "config": {
        "allow-plugins": {
            "laminas/laminas-component-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Settermjd\\Mezzio\\Twilio\\WebhookValidator\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Settermjd\\Mezzio\\Twilio\\WebhookValidatorTest\\": "tests/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@static-analysis",
            "@test"
        ],
        "cs-check": "php -d xdebug.mode=off vendor/bin/phpcs",
        "cs-fix": "php -d xdebug.mode=off vendor/bin/phpcbf",
        "static-analysis": "php -d xdebug.mode=off vendor/bin/phpstan analyse --memory-limit=256M -c phpstan.neon",
        "test": "phpunit --colors=always",
        "test-coverage-clover": "phpunit --colors=always --coverage-clover clover.xml",
        "test-coverage-html": "phpunit --colors=always --coverage-html tests/output/"
    },
    "scripts-descriptions": {
        "static-analysis": "Run static analysis tool PHPStan."
    }
}
